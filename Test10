    <?php 
    $num1 = 1;
    $num2 = 2;
    
    function sumarNumeros($num1, $num2){
    
        $suma = $num1 + $num2;
        return $suma;
    }
    
    $llamarFuncion = sumarNumeros($num1, $num2);
    
    echo "La suma de " . $num1 . " + " . $num2 . " es: " . $llamarFuncion;
